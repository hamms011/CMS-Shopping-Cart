@model TheCakeShop.Models.ViewModels.Sidebar.SidebarVM

@{
    ViewBag.Title = "Edit SideBar";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card-box">

            <script type="text/javascript">
    @if (TempData["EM"] != null)
    {
        <text>
            swal({
                type: 'success',
                title: '@TempData["EM"]',
                showConfirmButton: false,
                timer: 1700
                })
        </text>
    }
            </script>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4 class="text-center display-4">Edit Sidebar</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        <label class="col-2 col-form-label" for="Body">Side Bar</label>
                        <div class="col-md-12">
                            @Html.TextAreaFor(model => model.Body, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Edit Sidebar" class="btn btn-success btn-lg" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
<script src="~/Scripts/ckeditor/ckeditor.js"></script>

    <script>
        CKEDITOR.replace("Body");
    </script>

}

